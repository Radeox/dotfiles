# i3status configuration file.

general {
  colors = true
  interval = 5
}

order += "ethernet _first_"
order += "wireless _first_"
order += "load"
order += "battery all"
order += "tztime local"

wireless _first_ {
  format_up = "W: %ip (%essid)"
  format_down = ""
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = ""
}

battery all {
  format = "%status %percentage %remaining"
}

load {
  format = "L: %1min"
}

tztime local {
  format = "%d-%m-%Y %H:%M"
}
