## Cool Linux commands ##
alias cat='bat'
alias ls='lsd'
alias du='dust'
alias df='duf'
alias curl='curlie'

## Aliases ##
alias sl='ls'
alias ll='ls -l'
alias ..='cd .. && ls'
alias grep='grep --color=auto'
alias rgrep='grep -r -n'
alias lgrep='grep -r -n -l'
alias p='ps aux | grep '
alias sudo='sudo '

## Scripts ##
alias yee='python ~/Sources/Projects/TermYeeLight/manager.py'
alias bt_manager='bash ~/Sources/scripts/bluetooth_manager.sh'
alias audio_output='bash ~/Sources/scripts/audio_profile.sh'
alias display_layout='bash ~/Sources/scripts/display_layout.sh'
alias clean_system='bash ~/Sources/scripts/clean_system.sh'

## Python virtual envs ##
export WORKON_HOME=/usr/local/virtualenvs
source /usr/bin/virtualenvwrapper.sh

## Environmental variables ##
export PATH="$PATH:/opt/AndroidSDK"
export ANDROID_SDK_ROOT="/opt/AndroidSDK"
export CHROME_EXECUTABLE="/usr/bin/vivaldi-stable"
export EDITOR="/usr/bin/vim"
export TERM="xterm-256color"
